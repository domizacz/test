@page "/"
@inject IJSRuntime SRuntime

<h1>Hello, world!</h1>
<div id="container">
    <div class="select">
        <label for="audioSource">Audio input source: </label><select id="audioSource" ></select>
    </div>

    <div class="select">
        <label for="audioOutput">Audio output destination: </label><select id="audioOutput"></select>
    </div>

    <div class="select">
        <label for="videoSource">Video source: </label><select id="videoSource"></select>
    </div>
    
    <textarea id="TextArea1" rows="100" cols="500">@audiosource()</textarea>
    <video id="(() => Funon())" playsinline autoplay></video>
    

</div>

@code
{
    public async Task audiosource()
    {
        await SRuntime.InvokeVoidAsync("start()");
    }


}