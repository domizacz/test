@page "/"
@inject IJSRuntime IJSRuntime
@inject IJSInProcessRuntime IJSInProcessRuntime
<h1>Hello, world!</h1>
<div id="container">
    <div class="select">
        <label for="audioSource">Audio input source: </label><select id="audioSource"></select>
    </div>

    <div class="select">
        <label for="audioOutput">Audio output destination: </label><select id="audioOutput"></select>
    </div>

    <div class="select">
        <label for="videoSource">Video source: </label><select id="videoSource"></select>
    </div>


    <video id="(() => Funon())" playsinline autoplay></video>
    

</div>

@code
{
  
    public static async ValueTask Funon(this IJSRuntime IJSRuntime)
    {
        await IJSRuntime.InvokeVoidAsync("my_function");
    }

}